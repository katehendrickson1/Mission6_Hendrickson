@{
}

@model List<MovieModel>

<table class="table table-bordered">
    <thead class="fw-bold">
        <tr>
            <td>Movie Category</td>
            <td>Movie Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Movie Edit</td>
            <td>Copied To Plex</td>
            <td>Lent To</td>
            <td>Notes</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var m in Model) // razor code to use model
        {
        <tr>
            <td>@m.Category.CategoryName</td>
            <td>@m.Title</td>
            <td>@m.Year</td>
            <td>@m.Director</td>
            <td>@m.Rating</td>
            <td>@m.Edited</td>
            <td>@m.CopiedToPlex</td>
            <td>@m.LentTo</td>
            <td>@m.Notes</td>
            <td></td>

            <td><a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@m.MovieId">Edit</a></td>
            <td><a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@m.MovieId">Delete</a></td> 
        </tr>
        }
    </tbody>
</table>