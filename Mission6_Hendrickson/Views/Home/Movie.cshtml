@{
}
@using Mission6_Hendrickson
@model MovieModel

<div class="text-center">
    <h1 class="display-4">Enter a Movie Into the Collection</h1>
</div>

<form method="post">

    <input type="hidden" asp-for="MovieId" />
    <select asp-for="CategoryId">
        <option value="">Movie Category: </option> 
        @foreach (CategoryModel c in ViewBag.Categories) // for loop to access categoryid and name from view bag
        {
            <option value="@c.CategoryId">@c.CategoryName</option>
        }
    </select>
    <br />
    <label asp-for="Title">Movie Title: </label>
    <input asp-for="Title" />
    <br />
    <label asp-for="Year">Year Released: </label>
    <input asp-for="Year" />
    <br />
    <label asp-for="Director">Director: </label>
    <input asp-for="Director" />
    <br />
    <label asp-for="Rating">Movie Rating: </label>
    <select asp-for="Rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG13">PG13</option>
        <option value="R">R</option>
    </select>
    <br />
    <label asp-for="Edited">Was the Movie Edited? </label>
    <select asp-for="Edited">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br />
    <label asp-for="LentTo">Who was this Movie Lent to? (optional)</label>
    <input asp-for="LentTo" />
    <br />
    <label asp-for="Notes">Notes: (optional)</label>
    <input asp-for="Notes" />
    <br />
    <button type="submit">Submit Movie</button>

    <div asp-validation-summary="All"></div> <!-- div tag to display the errors if an invalid model is created-->

</form>